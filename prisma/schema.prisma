generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String?  @unique
  image     String?
  coins     Int      @default(0)
  xp        Int      @default(0)
  rank      String   @default("Bronze")
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id          String   @id @default(uuid())
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  treatment   String   // "transparent" or "hidden"
  auctionType String   // "first-price" or "second-price"
  rounds      Round[]
}

model Round {
  id             String   @id @default(uuid())
  sessionId      String
  session        Session  @relation(fields: [sessionId], references: [id])
  roundNum       Int
  userCost       Float
  reserve        Float
  userBid        Float
  botBids        Json
  winningBid     Float
  winner         String   // "user" or "bot"
  userProfit     Float
  auctionSuccess Boolean
}